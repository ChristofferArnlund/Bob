search {
	objects ^(?:\.{1,2}\/)?(?:.*obj.*/)(.*\.o)$
	inc .*\/inc\/(.*)\.h$
	src .*\/src\/(.*)\.c$
	include_pattern (?m)(?:^#include[\s]*)[<|"](.*)[>|"]
}

CC      = clang
dep     = -I../MasterThesis/code/inc
CFLAGS   = -Wall
CFLAGS  += $dep
Entry   = .

all: stuff build
	echo "Hello World!"
	echo $CC $CFLAGS

crawl:
	echo $CC

stuff:
	echo "stuff"
	$CFLAGS += -DDEBUG

../MasterThesis/code/obj/%.o:%.c
	echo $@
	echo $<
	$CC $CFLAGS -c -o $@ $< 
